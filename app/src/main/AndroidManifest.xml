<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="brendenbernal.homeautomation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ChooseThermostat" />
        <activity android:name=".ThermostatAction" />
        <activity android:name=".ThermoSettings" />
        <activity android:name=".AddThermostat" />
        <activity android:name=".ChooseLock" />
        <activity android:name=".LockAction" />
        <activity android:name=".ChooseLight" />
        <activity android:name=".AddLight" />
        <activity android:name=".AddLock" />
        <activity android:name=".LightAction" />
        <activity android:name=".LightSettings"></activity>
    </application>

</manifest>