<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_choose_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/lights"
    tools:context="brendenbernal.homeautomation.ChooseLight"
    android:orientation="vertical">

    <TextView
        android:text="Choose Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewChooseLight"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:background="@android:color/background_light"
        android:alpha="0.5"
        android:layout_weight="0.07" />

    <Button
        android:text="Living Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLight1"
        android:background="#dedada"
        android:alpha="0.5"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Kitchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLight2"
        android:background="@android:color/background_light"
        android:alpha="0.5"
        android:textColor="@color/colorPrimaryDark" />


    <Button
        android:text="Porch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLight3"
        android:background="#dedada"
        android:alpha="0.5"
        android:textColor="@android:color/background_dark" />

    <Button
        android:text="Back Patio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLight4"
        android:background="@android:color/background_light"
        android:alpha="0.5" />

    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLight5"
        android:background="#dedada"
        android:alpha="0.5"
        android:textColor="@android:color/background_dark" />

    <view
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="android.support.v4.widget.Space"
        android:id="@+id/view"
        android:layout_weight="0.14" />

    <Button
        android:text="Add/Remove Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEditLightList"
        android:background="@android:color/background_light"
        android:alpha="0.5"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:background="#dedada"
        android:alpha="0.5"
        android:textColor="@android:color/background_dark" />

</LinearLayout>
