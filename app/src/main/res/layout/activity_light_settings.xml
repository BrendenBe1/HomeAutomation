<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_light_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/lights"
    tools:context="brendenbernal.homeautomation.LightSettings"
    android:orientation="vertical">

    <TextView
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewChooseLock"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:background="@android:color/background_light"
        android:alpha="0.5"
        android:layout_weight="0.07" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        android:id="@+id/timePickerLight"
        android:background="#dedada"
        android:alpha="0.75"
        android:timePickerMode="spinner"
        android:layout_gravity="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.32" />

    <Switch
        android:text="On/Off"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/lightSettingsSwitch"
        android:layout_weight="0.13"
        android:background="@android:color/background_light"
        android:alpha="0.5"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.14" />

    <Button
        android:text="Set Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSetTime"
        android:background="#dedada"
        android:alpha="0.5"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="0.12" />

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:background="@android:color/background_light"
        android:alpha="0.5"
        android:textColor="@color/colorPrimaryDark"
        android:layout_weight="0.10" />

</LinearLayout>
