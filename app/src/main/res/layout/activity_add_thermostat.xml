<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_thermostat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/thermo1"
    tools:context="brendenbernal.homeautomation.AddThermostat"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="Add Thermostat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewAddThermo"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:background="@android:color/background_light"
        android:alpha="0.75"
        android:layout_weight="0.02" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13" />

    <TextView
        android:text="Enter New Thermostat ID:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:background="#dedada"
        android:alpha="0.75"
        android:textSize="24sp"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:background="@android:color/background_light"
        android:alpha="0.75"
        android:layout_weight="0.14"
        android:textAlignment="center"
        android:id="@+id/roomName" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.45" />

    <Button
        android:text="Add Thermostat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddButton"
        android:background="#dedada"
        android:alpha="0.75"
        android:textColor="@android:color/background_dark"
        android:layout_weight="0.12" />

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:background="@android:color/background_light"
        android:alpha="0.75"
        android:textColor="@android:color/background_dark"
        android:layout_weight="0.11" />

</LinearLayout>
