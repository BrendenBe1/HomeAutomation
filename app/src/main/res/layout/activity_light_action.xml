<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_light_action"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/lights"
    tools:context="brendenbernal.homeautomation.LightAction"
    android:orientation="vertical">

    <TextView
        android:text="Living Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewLightName"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:background="@android:color/background_light"
        android:alpha="0.75"
        android:layout_weight="0.02" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06" />

    <Switch
        android:text="On/Off"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/lightSwitch"
        android:layout_weight="0.13"
        android:background="#dedada"
        android:alpha="0.75"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07" />

    <Button
        android:text="Remove Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:id="@+id/buttonRemoveLight"
        android:alpha="0.75"
        android:layout_weight="0.03" />

    <Button
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSettings"
        android:background="#dedada"
        android:alpha="0.75"
        android:layout_weight="0.03" />

    <Button
        android:text="Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBack"
        android:background="@android:color/background_light"
        android:alpha="0.75"
        android:layout_weight="0.02" />

</LinearLayout>
